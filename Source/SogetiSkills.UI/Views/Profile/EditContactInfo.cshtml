@model SogetiSkills.UI.ViewModels.Profile.EditContactInfo.EditContactInfoViewModel
@{
    ViewBag.Title = "Edit contact info";
}

<div class="row">
    <div class="col-lg-6">
        <h2>Upload resume</h2>
        @Html.ValidationSummary()
        <p>@Html.ActionLink("Back to profile", MVC.Profile.Details(Model.UserId))</p>
        @using (Html.BeginForm(MVC.Profile.EditContactInfo(Model.UserId), FormMethod.Post, new { @class = "well" }))
        {
            <fieldset>
                <div class="form-group">
                    <label>First name</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Last name</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    @Html.TextBoxFor(x => x.EmailAddress, new { type = "email", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Phone number</label>
                    @Html.TextBoxFor(x => x.PhoneNumber, new { type = "tel", @class = "form-control" })
                </div>
            </fieldset>
            <input class="btn btn-primary" type="submit" value="Save" />
            @Html.AntiForgeryToken()
        }
    </div>
</div>