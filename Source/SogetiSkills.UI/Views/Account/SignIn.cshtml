@model SogetiSkills.UI.ViewModels.Account.SignInViewModel
@{
    ViewBag.Title = "Sign In";
}

<div class="col-lg-6">
    <h3>Sign in</h3>
    <p>Don't have an account?  @Html.ActionLink("Register", MVC.Account.Register())</p>
    @Html.ValidationSummary()
    @using (Html.BeginForm(MVC.Account.SignIn(), FormMethod.Post, new { @class = "well" }))
    {
        <div class="form-group">
            <label>Email address</label>
            @Html.TextBoxFor(x => x.EmailAddress, new { type = "email", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <input class="btn btn-primary" type="submit" value="Submit" />
        @Html.AntiForgeryToken()
    }    
</div>
