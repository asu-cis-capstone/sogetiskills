@model SogetiSkills.UI.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-lg-12">    
    <h3>Register</h3>
    <p>Already have an account?  @Html.ActionLink("Sign in", MVC.Account.SignIn())</p>
    @Html.ValidationSummary()
    @using (Html.BeginForm(MVC.Account.Register(), FormMethod.Post, new { @class = "well" }))
    {
        <div class="row">
            <div class="col-lg-6">
                <fieldset>
                    <legend>Account</legend>
                    <div class="form-group">
                        <label>Email address</label>
                        @Html.TextBoxFor(x => x.EmailAddress, new { type = "email", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Password <small>(must be at least 7 characters and contain a number and a letter)</small></label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Confirm password</label>
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Account type</label>
                        @Html.DropDownListFor(x => x.AccountType, Model.AccountTypeOptions, "Choose...", new { @class = "form-control" })
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <legend>Contact info</legend>
                    <div class="form-group">
                        <label>First name</label>
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Last name</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone number <small>(10 digits)</small></label>
                        @Html.TextBoxFor(x => x.PhoneNumber, new { type = "tel", @class = "form-control" })
                    </div>
                </fieldset>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit" />
        @Html.AntiForgeryToken()
    }
</div>
