@model SogetiSkills.UI.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-lg-6">
    @using (Html.BeginForm(MVC.Account.Register()))
    {
        @Html.ValidationSummary()
        <h3>Register</h3>
        <p>Already have an account?  @Html.ActionLink("Sign in", MVC.Account.SignIn())</p>
        <div class="form-group">
            <label>Email address</label>
            @Html.TextBoxFor(x => x.EmailAddress, new { type = "email", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Confirm password</label>
            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>First name</label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Last name</label>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        </div>
        <input class="btn btn-primary" type="submit" value="Submit" />
        @Html.AntiForgeryToken()
    }
</div>
